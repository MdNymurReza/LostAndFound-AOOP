<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lost_and_found.controller.UpdateProfileController">
    <children>
        <AnchorPane layoutY="-1.0" prefHeight="46.0" prefWidth="414.0" style="-fx-background-color: #FFD600;">
            <children>
                <Label layoutX="14.0" layoutY="4.0" prefHeight="37.0" prefWidth="169.0" text="Update Profile">
                    <font>
                        <Font name="Arial Rounded MT Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <Label layoutX="14.0" layoutY="75.0" text="New Username">
            <font>
                <Font name="Arial Rounded MT Bold" size="13.0" />
            </font>
        </Label>
        <TextField fx:id="usernameField" layoutX="163.0" layoutY="70.0" prefHeight="25.0" prefWidth="222.0" />
        <Label layoutX="14.0" layoutY="123.0" text="New Password">
            <font>
                <Font name="Arial Rounded MT Bold" size="13.0" />
            </font>
        </Label>
        <PasswordField fx:id="passwordField" layoutX="163.0" layoutY="119.0" prefHeight="25.0" prefWidth="222.0" />
        <Label layoutX="14.0" layoutY="175.0" text="Confirm New Password">
            <font>
                <Font name="Arial Rounded MT Bold" size="13.0" />
            </font>
        </Label>
        <PasswordField fx:id="confirmPasswordField" layoutX="163.0" layoutY="170.0" prefHeight="25.0" prefWidth="222.0" />
        <Label layoutX="14.0" layoutY="224.0" text="Upload Profile Picture">
            <font>
                <Font name="Arial Rounded MT Bold" size="13.0" />
            </font>
        </Label>
        <Button fx:id="chooseFileButton" layoutX="163.0" layoutY="218.0" mnemonicParsing="false" onAction="#handleChooseFile" prefHeight="25.0" prefWidth="222.0" style="-fx-background-color: #008cff;" text="Choose File">
            <font>
                <Font name="Arial Rounded MT Bold" size="13.0" />
            </font>
        </Button>

        <!-- Added ImageView for profile picture preview -->
        <ImageView fx:id="profileImageView" layoutX="163.0" layoutY="260.0" fitHeight="70.0" fitWidth="70.0" />

        <Button fx:id="confirmButton" layoutX="148.0" layoutY="340.0" mnemonicParsing="false" onAction="#handleConfirmUpdate" prefHeight="24.0" prefWidth="117.0" style="-fx-background-color: #FFD600;" text="Confirm Update">
            <font>
                <Font name="Arial Rounded MT Bold" size="13.0" />
            </font>
        </Button>

        <Label fx:id="messageLabel" alignment="CENTER" layoutX="71.0" layoutY="310.0" prefHeight="17.0" prefWidth="285.0" textFill="#f40505">
            <font>
                <Font name="Arial Rounded MT Bold" size="12.0" />
            </font>
        </Label>
    </children>
</AnchorPane>

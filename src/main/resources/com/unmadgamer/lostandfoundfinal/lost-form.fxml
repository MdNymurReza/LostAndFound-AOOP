<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" style="-fx-padding: 30; -fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unmadgamer.lostandfoundfinal.controller.LostFormController">

   <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Report Lost Item">
      <VBox.margin>
         <Insets left="157.0" />
      </VBox.margin></Label>

   <VBox spacing="15">
      <!-- Item Name -->
      <VBox spacing="5">
         <Label style="-fx-font-weight: bold;" text="Item Name *" />
         <TextField fx:id="itemNameField" promptText="Enter item name (e.g., iPhone, Wallet, Keys)" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10;" />
      </VBox>

      <!-- Category -->
      <VBox spacing="5">
         <Label style="-fx-font-weight: bold;" text="Category *" />
         <TextField fx:id="categoryField" promptText="Enter category (e.g., Electronics, Personal, Documents)" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10;" />
      </VBox>

      <!-- Description -->
      <VBox spacing="5">
         <Label style="-fx-font-weight: bold;" text="Description *" />
         <TextArea fx:id="descriptionField" prefRowCount="3" promptText="Provide detailed description of the lost item..." style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10;" wrapText="true" />
      </VBox>

      <!-- Location -->
      <VBox spacing="5">
         <Label style="-fx-font-weight: bold;" text="Location *" />
         <TextField fx:id="locationField" promptText="Where did you lose it? (e.g., Main Library, Cafeteria)" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10;" />
      </VBox>

      <!-- Date -->
      <VBox spacing="5">
         <Label style="-fx-font-weight: bold;" text="Lost Date *" />
         <DatePicker fx:id="lostDatePicker" prefHeight="37.0" prefWidth="478.0" style="-fx-background-radius: 8; -fx-border-radius: 8;" />
      </VBox>

      <!-- Contact Info -->
      <VBox spacing="5">
         <Label style="-fx-font-weight: bold;" text="Contact Information *" />
         <TextField fx:id="contactInfoField" promptText="Your email or phone number for contact" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10;" />
      </VBox>

      <!-- Reward (Optional) -->
      <VBox spacing="5">
         <Label style="-fx-font-weight: bold;" text="Reward (Optional)" />
         <TextField fx:id="rewardField" promptText="Optional reward for finding the item" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-padding: 10;" />
      </VBox>
   </VBox>

   <!-- Action Buttons -->
   <HBox alignment="CENTER" spacing="15">
      <Button onAction="#handleSubmit" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 30; -fx-background-radius: 8;" text="Submit Report" />
      <Button onAction="#handleClearForm" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 30; -fx-background-radius: 8;" text="Clear Form" />
      <Button onAction="#handleBackToDashboard" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 30; -fx-background-radius: 8;" text="Back to Dashboard" />
   </HBox>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.unmadgamer.lostandfoundfinal.controller.AdminVerificationController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f8f9fa;">

    <!-- Header -->
    <VBox spacing="5">
        <Label fx:id="adminWelcomeLabel" text="Admin Verification Panel"
               style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Label fx:id="statsLabel" text="Statistics: Loading..."
               style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;"/>
    </VBox>

    <Separator/>

    <!-- Main Content -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Items Pending Verification" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #34495e;"/>

        <TableView fx:id="itemsTable" VBox.vgrow="ALWAYS" style="-fx-font-size: 12;">
            <columns>
                <TableColumn fx:id="itemNameCol" text="Item Name" prefWidth="120"/>
                <TableColumn fx:id="categoryCol" text="Category" prefWidth="100"/>
                <TableColumn fx:id="descriptionCol" text="Description" prefWidth="200"/>
                <TableColumn fx:id="locationCol" text="Location" prefWidth="100"/>
                <TableColumn fx:id="reportedByCol" text="Reported By" prefWidth="100"/>
                <TableColumn fx:id="statusCol" text="Status" prefWidth="80"/>
                <TableColumn fx:id="dateCol" text="Date Reported" prefWidth="120"/>
                <TableColumn fx:id="verificationCol" text="Verification" prefWidth="110"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <!-- Verification Notes -->
    <VBox spacing="5">
        <Label text="Verification Notes:" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <TextArea fx:id="verificationNotes" promptText="Select an item to add verification notes..."
                  prefHeight="80" prefWidth="400" style="-fx-font-size: 12;"/>
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="âœ… Verify Item" onAction="#handleVerifyItem"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-font-size: 12;"
                tooltip="Verify the selected item"/>

        <Button text="ðŸ“‹ View Details" onAction="#handleViewDetails"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-font-size: 12;"
                tooltip="View detailed information about the selected item"/>

        <Button text="ðŸ”„ Refresh" onAction="#handleRefresh"
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-font-size: 12;"
                tooltip="Refresh the verification list"/>

        <Button text="ðŸ“Š Verified Items" onAction="#handleViewVerifiedItems"
                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-font-size: 12;"
                tooltip="View all verified items"/>

        <Button text="âŒ Close" onAction="#handleClose"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-font-size: 12;"
                tooltip="Close the admin panel"/>
    </HBox>

    <!-- Instructions -->
    <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: #e8f4f8; -fx-border-color: #3498db; -fx-border-radius: 5;">
        <Label text="ðŸ“ Admin Instructions:" style="-fx-font-weight: bold; -fx-text-fill: #2980b9;"/>
        <Label text="1. Select an item from the table above" style="-fx-text-fill: #2c3e50; -fx-font-size: 11;"/>
        <Label text="2. Review the item details using 'View Details' button" style="-fx-text-fill: #2c3e50; -fx-font-size: 11;"/>
        <Label text="3. Add any verification notes if needed" style="-fx-text-fill: #2c3e50; -fx-font-size: 11;"/>
        <Label text="4. Click 'Verify Item' to approve the item" style="-fx-text-fill: #2c3e50; -fx-font-size: 11;"/>
    </VBox>
</VBox>
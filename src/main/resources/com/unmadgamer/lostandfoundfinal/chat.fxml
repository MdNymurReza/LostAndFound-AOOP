<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unmadgamer.lostandfoundfinal.controller.ChatController">
    <left>
        <VBox prefWidth="250.0" spacing="10" style="-fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-border-width: 0 1 0 0;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 10 0;">
                <Label style="-fx-font-weight: bold; -fx-font-size: 18;" text="💬 Messages">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="unreadCountLabel" style="-fx-text-fill: #27ae60; -fx-font-size: 12;" text="No unread messages" />
            </HBox>

            <!-- Search and New Chat -->
            <HBox alignment="CENTER" spacing="5">
                <TextField fx:id="searchField" prefHeight="26.0" prefWidth="193.0" promptText="Search conversations..." styleClass="form-style" />
                <Button fx:id="newChatButton" onAction="#startNewConversation" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="➕">
                    <tooltip>
                        <Tooltip text="Start new conversation" />
                    </tooltip>
                </Button>
            </HBox>

            <!-- Refresh Button -->
            <Button onAction="#refreshConversations" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="🔄 Refresh" />

            <!-- Conversations List -->
            <Label style="-fx-font-weight: bold; -fx-text-fill: #666; -fx-font-size: 12;" text="Conversations:" />
            <ListView fx:id="conversationsList" style="-fx-background-color: transparent; -fx-border-color: #e9ecef; -fx-border-radius: 5;" VBox.vgrow="ALWAYS" />
        </VBox>
    </left>

    <center>
        <VBox spacing="0" style="-fx-background-color: #ffffff;">
            <!-- Chat Header -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-border-width: 0 0 1 0; -fx-padding: 15;">
                <VBox spacing="2">
                    <Label fx:id="chatWithLabel" style="-fx-font-weight: bold; -fx-font-size: 16;" text="Chat with: --">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>
                    <Label fx:id="itemContextLabel" style="-fx-text-fill: #666; -fx-font-size: 12;" text="" visible="false" />
                </VBox>
                <Circle fx:id="onlineStatus" fill="#95a5a6" radius="5.0" />
                <Label fx:id="statusLabel" style="-fx-text-fill: #666; -fx-font-size: 12;" text="Offline" />

                <Pane HBox.hgrow="ALWAYS" />

                <Button onAction="#handleBackToDashboard" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="← Dashboard">
                    <tooltip>
                        <Tooltip text="Return to dashboard" />
                    </tooltip>
                </Button>
            </HBox>

            <!-- Messages Area -->
            <ScrollPane fx:id="messagesScrollPane" fitToWidth="true" style="-fx-background: white; -fx-border-color: transparent;" VBox.vgrow="ALWAYS">
                <VBox fx:id="messagesContainer" spacing="10" style="-fx-padding: 15;">
                    <!-- Messages will be dynamically added here -->
                </VBox>
            </ScrollPane>

            <!-- No Conversation View -->
            <VBox fx:id="noConversationView" alignment="CENTER" managed="true" style="-fx-background-color: #f8f9fa;" visible="true" VBox.vgrow="ALWAYS">
                <Label fx:id="noConversationLabel" style="-fx-text-fill: #666; -fx-font-size: 14;" text="Select a conversation to start chatting" />
                <Button onAction="#startNewConversation" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20;" text="Start New Conversation">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </VBox>

            <!-- Message Input Area -->
            <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-border-width: 1 0 0 0; -fx-padding: 15;">
                <TextArea fx:id="messageInput" prefRowCount="2" promptText="Type your message here..." style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 10;" wrapText="true" HBox.hgrow="ALWAYS" />
                <Button fx:id="sendButton" onAction="#sendMessage" prefHeight="41.0" prefWidth="113.0" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 10 20;" text="Send">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                    <tooltip>
                        <Tooltip text="SEND" />
                    </tooltip>
                </Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>

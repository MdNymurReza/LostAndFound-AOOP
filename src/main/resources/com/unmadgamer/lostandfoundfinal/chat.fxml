<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unmadgamer.lostandfoundfinal.controller.ChatController">
    <left>
        <VBox prefWidth="250.0" style="-fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-border-width: 0 1 0 0;" spacing="10">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
            </padding>

            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 0 0 10 0;">
                <Label text="ðŸ’¬ Messages" style="-fx-font-weight: bold; -fx-font-size: 18;">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="unreadCountLabel" text="No unread messages" style="-fx-text-fill: #27ae60; -fx-font-size: 12;" />
            </HBox>

            <!-- Search and New Chat -->
            <HBox spacing="5" alignment="CENTER">
                <TextField fx:id="searchField" prefWidth="160.0" promptText="Search conversations..." styleClass="form-style" />
                <Button fx:id="newChatButton" onAction="#startNewConversation" text="âž•" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;">
                    <tooltip>
                        <Tooltip text="Start new conversation" />
                    </tooltip>
                </Button>
            </HBox>

            <!-- Refresh Button -->
            <Button onAction="#refreshConversations" text="ðŸ”„ Refresh" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" />

            <!-- Conversations List -->
            <Label text="Conversations:" style="-fx-font-weight: bold; -fx-text-fill: #666; -fx-font-size: 12;" />
            <ListView fx:id="conversationsList" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-border-color: #e9ecef; -fx-border-radius: 5;" />
        </VBox>
    </left>

    <center>
        <VBox spacing="0" style="-fx-background-color: #ffffff;">
            <!-- Chat Header -->
            <HBox style="-fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-border-width: 0 0 1 0; -fx-padding: 15;" alignment="CENTER_LEFT" spacing="10">
                <VBox spacing="2">
                    <Label fx:id="chatWithLabel" text="Chat with: --" style="-fx-font-weight: bold; -fx-font-size: 16;">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>
                    <Label fx:id="itemContextLabel" text="" style="-fx-text-fill: #666; -fx-font-size: 12;" visible="false" />
                </VBox>
                <Circle fx:id="onlineStatus" radius="5.0" fill="#95a5a6" />
                <Label fx:id="statusLabel" text="Offline" style="-fx-text-fill: #666; -fx-font-size: 12;" />

                <Pane HBox.hgrow="ALWAYS" />

                <Button onAction="#handleBackToDashboard" text="â† Dashboard" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;">
                    <tooltip>
                        <Tooltip text="Return to dashboard" />
                    </tooltip>
                </Button>
            </HBox>

            <!-- Messages Area -->
            <ScrollPane fx:id="messagesScrollPane" VBox.vgrow="ALWAYS" style="-fx-background: white; -fx-border-color: transparent;" fitToWidth="true">
                <VBox fx:id="messagesContainer" spacing="10" style="-fx-padding: 15;">
                    <!-- Messages will be dynamically added here -->
                </VBox>
            </ScrollPane>

            <!-- No Conversation View -->
            <VBox fx:id="noConversationView" alignment="CENTER" visible="true" managed="true" VBox.vgrow="ALWAYS" style="-fx-background-color: #f8f9fa;">
                <Label fx:id="noConversationLabel" text="Select a conversation to start chatting" style="-fx-text-fill: #666; -fx-font-size: 14;" />
                <Button onAction="#startNewConversation" text="Start New Conversation" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20;">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Button>
            </VBox>

            <!-- Message Input Area -->
            <HBox style="-fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-border-width: 1 0 0 0; -fx-padding: 15;" spacing="10" alignment="CENTER">
                <TextArea fx:id="messageInput" promptText="Type your message here..." wrapText="true" prefRowCount="2" HBox.hgrow="ALWAYS" style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 10;" />
                <Button fx:id="sendButton" onAction="#sendMessage" text="Send" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 10 20;">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <tooltip>
                        <Tooltip text="Send message (Enter)" />
                    </tooltip>
                </Button>
            </HBox>
        </VBox>
    </center>
</BorderPane>
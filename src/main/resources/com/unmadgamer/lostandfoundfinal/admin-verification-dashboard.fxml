<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.unmadgamer.lostandfoundfinal.controller.AdminVerificationDashboardController"
      spacing="20" style="-fx-padding: 25; -fx-background-color: #f8f9fa;" prefHeight="1000" prefWidth="1490">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <VBox spacing="5">
            <Label fx:id="adminWelcomeLabel" text="Verification Dashboard"
                   style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
            <Label text="Manage item verification and approval" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button text="Bulk Verify" onAction="#handleBulkVerify"
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8;"/>
        <Button text="Export Report" onAction="#handleExportReport"
                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8;"/>
        <Button text="Refresh" onAction="#handleRefresh"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8;"/>
        <Button text="Close" onAction="#handleClose"
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8;"/>
    </HBox>

    <!-- Verification Statistics -->
    <HBox spacing="20" alignment="CENTER">
        <!-- Pending Verification -->
        <VBox spacing="5" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20; -fx-alignment: center;">
            <Label text="⏳" style="-fx-font-size: 24;"/>
            <Label text="Pending Verification" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
            <Label fx:id="pendingVerificationLabel" text="0" style="-fx-text-fill: #e67e22; -fx-font-size: 28; -fx-font-weight: bold;"/>
        </VBox>

        <!-- Verified Today -->
        <VBox spacing="5" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20; -fx-alignment: center;">
            <Label text="✅" style="-fx-font-size: 24;"/>
            <Label text="Verified Today" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
            <Label fx:id="verifiedTodayLabel" text="0" style="-fx-text-fill: #27ae60; -fx-font-size: 28; -fx-font-weight: bold;"/>
        </VBox>

        <!-- Total Verified -->
        <VBox spacing="5" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20; -fx-alignment: center;">
            <Label text="📊" style="-fx-font-size: 24;"/>
            <Label text="Total Verified" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
            <Label fx:id="totalVerifiedLabel" text="0" style="-fx-text-fill: #3498db; -fx-font-size: 28; -fx-font-weight: bold;"/>
        </VBox>

        <!-- Verification Rate -->
        <VBox spacing="5" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2); -fx-padding: 20; -fx-alignment: center;">
            <Label text="📈" style="-fx-font-size: 24;"/>
            <Label text="Verification Rate" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
            <Label fx:id="verificationRateLabel" text="100%" style="-fx-text-fill: #9b59b6; -fx-font-size: 28; -fx-font-weight: bold;"/>
        </VBox>
    </HBox>

    <!-- Search and Filter Section -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);">
        <Label text="Search &amp; Filter" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <HBox spacing="15" alignment="CENTER_LEFT">
            <TextField fx:id="searchField" promptText="Search items..."
                       style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 8 15;"
                       prefWidth="250"/>
            <ComboBox fx:id="statusFilter" promptText="Status"
                      style="-fx-background-radius: 8; -fx-border-radius: 8;"
                      prefWidth="120"/>
            <ComboBox fx:id="categoryFilter" promptText="Category"
                      style="-fx-background-radius: 8; -fx-border-radius: 8;"
                      prefWidth="150"/>
            <DatePicker fx:id="dateFilter" promptText="Filter by date"
                        style="-fx-background-radius: 8; -fx-border-radius: 8;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="💡 Right-click items for quick actions" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;"/>
        </HBox>
    </VBox>

    <!-- Main Content Area -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <!-- Pending Verification Section -->
        <VBox spacing="10" prefWidth="600" HBox.hgrow="ALWAYS">
            <Label text="⏳ Items Pending Verification" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #e67e22;"/>
            <TableView fx:id="pendingTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colPendingItemName" text="Item Name" prefWidth="150"/>
                    <TableColumn fx:id="colPendingCategory" text="Category" prefWidth="120"/>
                    <TableColumn fx:id="colPendingDate" text="Date" prefWidth="100"/>
                    <TableColumn fx:id="colPendingReportedBy" text="Reported By" prefWidth="120"/>
                    <TableColumn fx:id="colPendingActions" text="Actions" prefWidth="100"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>

        <!-- Recently Verified Section -->
        <VBox spacing="10" prefWidth="400">
            <Label text="✅ Recently Verified Items" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
            <TableView fx:id="recentVerifiedTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colVerifiedItemName" text="Item Name" prefWidth="120"/>
                    <TableColumn fx:id="colVerifiedCategory" text="Category" prefWidth="100"/>
                    <TableColumn fx:id="colVerifiedDate" text="Verified Date" prefWidth="100"/>
                    <TableColumn fx:id="colVerifiedBy" text="Verified By" prefWidth="80"/>
                    <TableColumn fx:id="colVerifiedActions" text="Actions" prefWidth="80"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </HBox>

    <!-- Instructions -->
    <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #e8f4f8; -fx-border-color: #3498db; -fx-border-radius: 8;">
        <Label text="🎯 Quick Actions Guide:" style="-fx-font-weight: bold; -fx-text-fill: #2980b9;"/>
        <Label text="• Click 'Verify' button or right-click for quick verification" style="-fx-text-fill: #2980b9; -fx-font-size: 11;"/>
        <Label text="• Use 'Bulk Verify' to verify multiple selected items at once" style="-fx-text-fill: #2980b9; -fx-font-size: 11;"/>
        <Label text="• Filter items by status, category, or date for easier management" style="-fx-text-fill: #2980b9; -fx-font-size: 11;"/>
        <Label text="• Export reports for verification tracking and analytics" style="-fx-text-fill: #2980b9; -fx-font-size: 11;"/>
    </VBox>
</VBox>
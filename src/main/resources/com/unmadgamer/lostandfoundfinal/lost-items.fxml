<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.unmadgamer.lostandfoundfinal.controller.LostItemsController"
      spacing="20" style="-fx-padding: 25; -fx-background-color: #f8f9fa;" prefHeight="700" prefWidth="1000">

   <!-- Header -->
   <HBox alignment="CENTER_LEFT" spacing="15">
      <VBox spacing="5">
         <Label text="Lost Items" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
         <Label fx:id="welcomeLabel" text="Browse available lost items" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
      </VBox>
      <Region HBox.hgrow="ALWAYS"/>
      <Button text="Report Lost Item" onAction="#handleReportLostItem"
              style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8;"/>
      <Button text="Refresh" onAction="#handleRefresh"
              style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8;"/>
      <Button text="Back to Dashboard" onAction="#handleBackToDashboard"
              style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8;"/>
   </HBox>

   <!-- Search and Filter Section -->
   <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);">
      <Label text="Search &amp; Filter" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
      <HBox spacing="15" alignment="CENTER_LEFT">
         <TextField fx:id="searchField" promptText="Search lost items..."
                    style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 8 15;"
                    prefWidth="250"/>
         <ComboBox fx:id="categoryFilter" promptText="Category"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;"
                   prefWidth="150"/>
         <Region HBox.hgrow="ALWAYS"/>
         <Button text="Search" onAction="#handleSearch"
                 style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 8;"/>
         <Button text="Clear Filters" onAction="#handleClearFilters"
                 style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 8;"/>
      </HBox>
   </VBox>

   <!-- Lost Items Table -->
   <VBox spacing="10" VBox.vgrow="ALWAYS">
      <Label text="🔍 Available Lost Items" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>
      <TableView fx:id="itemsTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colItemName" text="Item Name" prefWidth="150"/>
            <TableColumn fx:id="colCategory" text="Category" prefWidth="120"/>
            <TableColumn fx:id="colDescription" text="Description" prefWidth="200"/>
            <TableColumn fx:id="colLocation" text="Location" prefWidth="120"/>
            <TableColumn fx:id="colDate" text="Date Lost" prefWidth="100"/>
            <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
            <TableColumn fx:id="colAction" prefWidth="100.0" text="Action" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </VBox>

   <!-- Instructions -->
   <VBox spacing="5" style="-fx-padding: 15; -fx-background-color: #fff3cd; -fx-border-color: #ffeaa7; -fx-border-radius: 8;">
      <Label text="💡 How to claim a lost item:" style="-fx-font-weight: bold; -fx-text-fill: #856404;"/>
      <Label text="• Browse the list of verified lost items below" style="-fx-text-fill: #856404; -fx-font-size: 11;"/>
      <Label text="• Use search and filters to find specific items" style="-fx-text-fill: #856404; -fx-font-size: 11;"/>
      <Label text="• Click 'Report Lost Item' to report your own lost item" style="-fx-text-fill: #856404; -fx-font-size: 11;"/>
      <Label text="• Only verified items are shown in this list" style="-fx-text-fill: #856404; -fx-font-size: 11;"/>
   </VBox>
</VBox>
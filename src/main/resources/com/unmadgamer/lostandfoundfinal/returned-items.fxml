<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="700" prefWidth="1000" spacing="20" style="-fx-padding: 25; -fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unmadgamer.lostandfoundfinal.controller.ReturnedItemsController">

   <!-- Header -->
   <HBox alignment="CENTER_LEFT" spacing="15">
      <VBox spacing="5">
         <Label style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Returned Items History" />
         <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;" text="Track all successfully returned lost and found items" />
      </VBox>
      <Region HBox.hgrow="ALWAYS" />
      <Button onAction="#handleRefresh" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8;" text="Refresh" />
      <Button onAction="#handleExportReport" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8;" text="Export Report" />
      <Button onAction="#handleBackToDashboard" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 8;" text="Back to Dashboard" />
   </HBox>

   <!-- Statistics -->
   <HBox alignment="CENTER" spacing="20">
      <Label fx:id="statsLabel" prefHeight="56.0" prefWidth="213.0" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 15; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);" text="ðŸ“Š Statistics: Loading..." />
   </HBox>

   <!-- Search and Filter Section -->
   <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 1);">
      <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Search &amp; Filter" />
      <HBox alignment="CENTER_LEFT" spacing="15">
         <TextField fx:id="searchField" prefWidth="250" promptText="Search returned items..." style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 8 15;" />
         <ComboBox fx:id="typeFilter" prefHeight="39.0" prefWidth="120" promptText="Item Type" style="-fx-background-radius: 8; -fx-border-radius: 8;" />
         <ComboBox fx:id="categoryFilter" prefHeight="34.0" prefWidth="150" promptText="Category" style="-fx-background-radius: 8; -fx-border-radius: 8;" />
         <Region HBox.hgrow="ALWAYS" />
         <Button onAction="#handleSearch" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 8;" text="Search" />
         <Button onAction="#handleClearFilters" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 8;" text="Clear Filters" />
      </HBox>
   </VBox>

   <!-- Returned Items Table -->
   <VBox spacing="10" VBox.vgrow="ALWAYS">
      <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="Returned Items History" />
      <TableView fx:id="returnedTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="colItemName" prefWidth="150" text="Item Name" />
            <TableColumn fx:id="colCategory" prefWidth="120" text="Category" />
            <TableColumn fx:id="colType" prefWidth="80" text="Type" />
            <TableColumn fx:id="colReturnedTo" prefWidth="120" text="Returned To" />
            <TableColumn fx:id="colReturnedBy" prefWidth="120" text="Returned By" />
            <TableColumn fx:id="colDate" prefWidth="100" text="Date" />
            <TableColumn fx:id="colActions" prefWidth="100" text="Actions" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </VBox>
</VBox>

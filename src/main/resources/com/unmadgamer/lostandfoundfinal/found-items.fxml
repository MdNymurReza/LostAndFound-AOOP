<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.unmadgamer.lostandfoundfinal.controller.FoundItemsController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #f8f9fa;">

   <!-- Header -->
   <HBox alignment="CENTER_LEFT" spacing="15">
      <VBox spacing="5">
         <Label text="Found Items" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
         <Label fx:id="userNameLabel" text="User" style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;"/>
      </VBox>
      <Region HBox.hgrow="ALWAYS"/>
      <Button text="Refresh" onAction="#handleRefresh"
              style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 8;"/>
      <Button text="Back to Dashboard" onAction="#handleBackToDashboard"
              style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 8;"/>
   </HBox>

   <!-- Search and Filter -->
   <HBox spacing="15" alignment="CENTER_LEFT">
      <TextField fx:id="searchField" promptText="Search found items..."
                 style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 8 15;"
                 prefWidth="250"/>
      <ComboBox fx:id="filterCombo" promptText="Filter by verification"
                style="-fx-background-radius: 8; -fx-border-radius: 8;"
                prefWidth="180"/>
      <Region HBox.hgrow="ALWAYS"/>
      <Button text="Mark as Returned" onAction="#handleMarkAsReturned"
              style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 8;"/>
   </HBox>

   <!-- Table -->
   <TableView fx:id="itemsTable" VBox.vgrow="ALWAYS">
      <columns>
         <TableColumn fx:id="colItemName" text="Item Name" prefWidth="150"/>
         <TableColumn fx:id="colCategory" text="Category" prefWidth="120"/>
         <TableColumn fx:id="colDate" text="Found Date" prefWidth="120"/>
         <TableColumn fx:id="colLocation" text="Location" prefWidth="150"/>
         <TableColumn fx:id="colReportedBy" text="Reported By" prefWidth="120"/>
         <TableColumn fx:id="colVerification" text="Verification" prefWidth="120"/>
      </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
   </TableView>

   <!-- Instructions -->
   <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: #e8f4f8; -fx-border-color: #3498db; -fx-border-radius: 5;">
      <Label text="ðŸ’¡ Tips:" style="-fx-font-weight: bold; -fx-text-fill: #2980b9;"/>
      <Label text="â€¢ Select an item and use 'Mark as Returned' when item is returned to owner" style="-fx-text-fill: #2980b9; -fx-font-size: 11;"/>
      <Label text="â€¢ Admins can right-click items to verify them" style="-fx-text-fill: #2980b9; -fx-font-size: 11;"/>
      <Label text="â€¢ Use search and filter to find specific items" style="-fx-text-fill: #2980b9; -fx-font-size: 11;"/>
   </VBox>
</VBox>